// SQLite for local dev; swap provider/url for Postgres in production
// Run: npx prisma migrate dev --name init

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Vote {
  id          String        @id @default(uuid())
  label       String        @unique
  title       String
  isOpen      Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  options     VoteOption[]
  submissions Submission[]
}

model VoteOption {
  id     String @id @default(uuid())
  label  String
  order  Int
  vote   Vote   @relation(fields: [voteId], references: [id], onDelete: Cascade)
  voteId String
  ranks  SubmissionRank[]
}

model Submission {
  id           String           @id @default(uuid())
  vote         Vote             @relation(fields: [voteId], references: [id], onDelete: Cascade)
  voteId       String
  createdAt    DateTime         @default(now())
  fingerprint  String?
  ranks        SubmissionRank[]
}

model SubmissionRank {
  id            String      @id @default(uuid())
  rank          Int
  submission    Submission  @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  submissionId  String
  option        VoteOption  @relation(fields: [optionId], references: [id], onDelete: Cascade)
  optionId      String

  @@unique([submissionId, rank])
}
